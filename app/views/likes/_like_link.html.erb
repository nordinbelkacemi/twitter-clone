<% if @like.likeable_type == "Comment" %>
    <%= link_to(comment_likes_path(@like.likeable), method: :post, remote: true, class: 'like-link') do %>
        <i class='far fa-heart'></i>
    <% end %>
<% elsif @like.likeable_type == "Post" %>
    <%= link_to(post_likes_path(@like.likeable), method: :post, remote: true, class: 'like-link') do %>
        <i class='far fa-heart'></i>
        <%= @like.likeable.likes.count %>
    <% end %>
<% end %>